build () {wasm-pack build;}

if [ "$1" == "init" ]; then
    echo "You must have Rust installed before running init https://www.rust-lang.org/tools/install"
    cargo install wasm-pack
    wasm-pack build
    cd site
    npm install
    npm audit fix
    echo "\n\n> Successfully initialized dio."

elif [ "$1" == "build" ]; then
    build

elif [ "$1" == "serve" ]; then
    build
    cd site
    npm run start

else
    echo "TODO: HELP_MSG"

fi
